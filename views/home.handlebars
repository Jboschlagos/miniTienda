<div class="row mb-4">
    <div class="col-12">
        <h1 class="display-4">{{mayusculas tienda.nombre}}</h1>
        <p class="lead">{{tienda.mensajeBienvenida}}</p>
    </div>
</div>

<div class="row g-4">
    {{#each productos}}
    <div class="col-sm-6 col-md-4 col-lg-3">
        <div class="card h-100 shadow-sm">
            <img src="{{imagen}}" class="card-img-top" alt="{{nombre}}" style="height: 200px; object-fit: cover;">
            <div class="card-body">
                <h5 class="card-title">{{nombre}}</h5>
                <p class="card-text">
                    <span class="h5 text-primary">{{formatoPrecio precio}}</span>
                </p>
                {{#if disponible}}
                    <span class="badge bg-success">
                        <i class="fas fa-check-circle me-1"></i>En stock
                    </span>
                {{else}}
                    <span class="badge bg-danger">
                        <i class="fas fa-times-circle me-1"></i>Agotado
                    </span>
                {{/if}}
            </div>
            <div class="card-footer bg-transparent">
                {{#if disponible}}
                    <button class="btn btn-primary w-100">
                        <i class="fas fa-cart-plus me-2"></i>Agregar
                    </button>
                {{else}}
                    <button class="btn btn-secondary w-100" disabled>
                        <i class="fas fa-ban me-2"></i>No disponible
                    </button>
                {{/if}}
            </div>
        </div>
    </div>
    {{/each}}
</div>